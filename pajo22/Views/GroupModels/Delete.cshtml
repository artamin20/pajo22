@model pajo22.Models.GroupModels

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/head_foot.cshtml";
}

<div class="max-w-[1440px] mx-auto px-3">
    <div class="bg-white shadow-xl my-5 lg:my-10 rounded-xl md:rounded-2xl p-3 md:p-5">
        <div class="flex flex-col md:flex-row gap-y-3 items-center gap-x-2 mb-7">
            <div class="text-sm opacity-80">
                <div>
                    <div class="text-2xl md:text-3xl opacity-70 mb-3 text-center">
                        حذف
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5 px-5 md:px-20">
                        <div class="mb-4">
                            <h3 class="text-xl font-semibold mb-2">آیا از حذف این گروه مطمئن هستید؟</h3>
                            <h4 class="opacity-70 mb-3 text-center">GroupModels</h4>
                            <hr class="mb-3" />

                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                            </dl>

                            <!-- Warning message -->
                            <div class="text-red-500 mb-3">
                                حذف کردن این گروه باعث می‌شود تمام زیرگروه‌ها و محصولات مرتبط با آن حذف شوند. پیشنهاد می‌دهیم قبل از حذف، ابتدا زیرگروه‌ها و محصولات را غیرفعال کنید.
                            </div>


                            <form asp-action="Delete" onsubmit="return confirmDelete()">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="block w-full rounded-lg bg-red-500 text-white text-sm font-bold px-6 py-2 font-normal text-center mb-4">حذف</button>
                                <a asp-action="Index" class="block w-full rounded-lg bg-gray-500 text-white text-sm font-bold px-6 py-2 font-normal text-center">بازگشت به لیست</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete() {
        return confirm("حذف کردن این گروه باعث می‌شود تمام محصولات و زیرگروه‌های مرتبط به آن تا ابد حذف شوند. پیشنهاد می‌دهیم به جای حذف کردن آن‌ها را غیرفعال کنید. آیا مطمئن هستید که می‌خواهید ادامه دهید؟");
    }
</script>
