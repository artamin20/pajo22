@model pajo22.Models.GroupModels

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/head_foot.cshtml";
}

<div class="max-w-[1440px] mx-auto px-3">
    <div class="bg-white shadow-xl my-5 lg:my-10 rounded-xl md:rounded-2xl p-3 md:p-5">
        <div class="flex flex-col md:flex-row gap-y-3 items-center gap-x-2 mb-7 text-sm opacity-80">
            <div>
                <div class="text-2xl md:text-3xl opacity-70 mb-3 text-center">
                    ساختن
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-5 px-5 md:px-20">
                    <div class="mb-4">
                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="block mb-2 font-semibold text-xs text-slate-700"></label>
                                <input asp-for="Name" class="text-sm block w-full rounded-lg border border-gray-400 bg-white px-3 py-2 font-normal text-gray-700 outline-none focus:border-red-300" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="block w-full rounded-lg bg-green-500 text-white text-sm font-bold px-6 py-2 font-normal text-center">Create</button>
                            </div>
                        </form>
                    </div>

                    <div class="mb-4">
                        <a asp-action="Index" class="block w-full rounded-lg bg-gray-500 text-white text-sm font-bold px-6 py-2 font-normal text-center">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
