@model pajo22.Models.SubgroupModels

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/head_foot.cshtml";
}

<div class="max-w-[1440px] mx-auto px-3">
    <div class="bg-white shadow-xl my-5 lg:my-10 rounded-xl md:rounded-2xl p-3 md:p-5">
        <div class="text-2xl md:text-3xl opacity-70 mb-3 text-center">
            Delete
        </div>

        <div>
            <h4>SubgroupModels</h4>
            <hr />
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <div class="mb-4">
                    <dt class="text-sm font-semibold text-slate-700 mb-2">نام زیرگروه</dt>
                    <dd class="text-sm">@Html.DisplayFor(model => model.Name)</dd>
                </div>

                <div class="mb-4">
                    <dt class="text-sm font-semibold text-slate-700 mb-2">نام گروه</dt>
                    <dd class="text-sm">@Html.DisplayFor(model => model.GroupModels.Name)</dd>
                </div>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="block w-full rounded-lg bg-red-500 text-white text-sm font-bold px-6 py-2 font-normal text-center mb-4">Delete</button>
                <a asp-action="Index" class="block w-full rounded-lg bg-gray-500 text-white text-sm font-bold px-6 py-2 font-normal text-center">Back to List</a>
            </form>
        </div>
    </div>
</div>
