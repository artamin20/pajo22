@model IEnumerable<pajo22.Models.AttributeValues>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attribute)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductModel.Name)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attribute.AttributeName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AttributeValueID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AttributeValueID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AttributeValueID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
